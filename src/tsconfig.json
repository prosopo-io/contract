{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "rootDir": "./",
        "outDir": "./build",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitAny": false
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],

}