{
  "compilerOptions": {
    "types": [
      "node"
    ],
    "target": "ES2019",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./build",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "declaration": true,
    "resolveJsonModule": true,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,
    "baseUrl": ".",
    "composite": true
  },
  "include": [
    "packages/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "artifacts",
    ".cache",
    "build/**/*",
    "**/build/**/*"
  ],
}