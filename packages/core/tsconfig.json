{
  "compilerOptions": {
    "types": [
      "node"
    ],
    "target": "ES2019",
    "module": "commonjs",
    "rootDirs": [
      ".",
      "./src",
      "./tests",
      "./scripts"
    ],
    "outDir": "./build",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "declaration": true,
    "resolveJsonModule": true,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,
    "baseUrl": ".",
    "paths": {
      "@prosopo/contract": [
        "../contract/src"
      ],
      "@prosopo/contract/*": [
        "../contract/src/*"
      ],
      "@prosopo/provider-core": [
        "../core/src"
      ],
      "@prosopo/provider-core/*": [
        "../core/src/*"
      ]
    }
  },
  "baseUrl": ".",
  "include": [
    "**/*.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "artifacts",
    ".cache",
    "build/**/*",
    "**/build/**/*",
    "**/*.test.ts",
    "**/*mock*.ts",
    "tests/*"
  ],
  "references": [
    {
      "path": "../contract"
    }
  ]
}