{

  "compilerOptions": {
    "types": ["node"],
    "target": "ES2019",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./build",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "declaration": true,
    "resolveJsonModule": true,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,
    "baseUrl": "../..",
    "paths": {
      "@prosopo/contract": ["./packages/contract/src"],
      "@prosopo/contract/*": ["./packages/contract/src/*"],
      "@prosopo/provider-core": ["./packages/core/src"],
      "@prosopo/provider-core/*": ["./packages/core/src/*"],

    }
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "artifacts",
    ".cache",
    "build/**/*",
    "**/build/**/*",
  ],
  "references": [
    { "path": "../contract/tsconfig.build.json" },
  ]

}